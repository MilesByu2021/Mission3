@model GradeModel;

@{
    ViewData["Title"] = "Mission 3";
}

<div class="text-center">

    <h2>Grade Calculator</h2>

    <!--A "Grade Calculator" form that takes as input a percentage scored for each grade
    category listed in the syllabus-->

    <form method="post">

        <label>Assignments: </label>
        <input id="txtAssignment" asp-for="Assignment" type="number" /><br />
        <label>Group Project: </label>
        <input id="txtProject" asp-for="Project" type="number" /><br />

        <label>Quizzes: </label>
        <input id="txtQuizzes" asp-for="Quizzes" type="number" /><br />

        <label>Exams: </label>
        <input id="txtExams" asp-for="Exams" type="number" /><br />

        <label>INTEX: </label>
        <input id="txtINTEX" asp-for="INTEX" type="number" /><br /><br />

        <input id="btnSend" type="submit" value="Send Grade" />

        <br />
        <div asp-validation-summary="All" class="text-danger"></div>

    </form>

</div>

<script src="~/js/site.js" asp-append-version="true"></script>